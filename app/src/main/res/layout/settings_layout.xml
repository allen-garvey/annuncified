<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_toggle_sms_listener_switch"
            android:id="@+id/annunciator_listen_for_texts_switch"
            android:layout_gravity="right"
            android:layout_column="13"
            android:showText="true"
            android:enabled="true"
            android:checked="false"
            android:layout_marginBottom="30dp"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ignore_texts_from_non_contacts_switch"
            android:id="@+id/ignore_texts_from_non_contacts_switch"
            android:layout_gravity="center_horizontal"
            android:enabled="true"
            android:checked="false"
            android:showText="true"
            />
    </TableLayout>

</LinearLayout>